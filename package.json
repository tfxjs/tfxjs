{
    "name": "@tfxjs/tfxjs",
    "version": "0.2.0",
    "description": "A powerful and modular framework for building Twitch bots with Typescript/Javascript. Simplifies event management, Twitch API integration, and command handling, allowing developers to focus on core bot functionality. Features include built-in Twitch API REST/WebSocket support, automatic event handling, and an easy-to-use command system. Ideal for both beginners and advanced developers.",
    "author": "kajahl",
    "homepage": "https://github.com/tfxjs/tfxjs",
    "license": "CC-BY-NC-SA-4.0",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "private": false,
    "keywords": [
        "twitch",
        "twitch bot",
        "twitch api",
        "twitch commands",
        "twitch events",
        "bot",
        "bot framework",
        "api",
        "commands",
        "framework",
        "chatbot",
        "chat",
        "streaming",
        "websocket",
        "live streaming",
        "javascript",
        "nodejs",
        "tfxjs"
    ],
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "npx ts-node local.ts",
        "test": "jest",
        "lint": "eslint 'src/**/*.{ts,tsx}'",
        "prettier": "prettier --write .",
        "prettier:check": "prettier --check .",
        "build": "tsup",
        "prepublishOnly": "npm run build",
        "linklocal": "npm unlink --global && npm run build && npm link"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/lodash": "^4.17.13",
        "@types/node": "^22.10.2",
        "@types/qs": "^6.9.18",
