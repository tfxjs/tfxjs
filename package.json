        "@typescript-eslint/parser": "^8.26.0",
        "eslint": "^9.17.0",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2"
    },
    "dependencies": {
