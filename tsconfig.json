{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "lib": ["es2021"]
    },
    "include": ["src/**/*", "src/types", "index.ts"],
    "exclude": ["node_modules", "dist"]
}